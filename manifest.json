{
  "name": "jira-fixer",
  "description": "Fix the shit show that is Jira",
  "version": "1.0",
  "permissions": [
    "activeTab"
  ],
  "content_scripts": [
    {
      "all_frames": true,
      "matches": [
        "https://studymode.atlassian.net/browse/*"
      ],
      "js": [
        "jira.js"
      ],
      "css": [
        "jira.css"
      ]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Fix Jira!"
  },
  "manifest_version": 2
}